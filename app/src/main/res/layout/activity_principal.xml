<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.rogelio.saludtec.Principal"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido: xxxxx"
        android:id="@+id/bienvenido"
        android:layout_gravity="right" />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="367dp"
        android:layout_height="221dp"
        android:layout_weight="0.02"
        android:weightSum="1">

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:src="@drawable/saludalimenticia"
            android:id="@+id/saludAlimenticia" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/saludcorporal"
            android:id="@+id/saludCorporal" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="367dp"
        android:layout_height="221dp"
        android:layout_weight="0.02"
        android:weightSum="1">

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:src="@drawable/perfil"
            android:id="@+id/perfil" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/semaf"
            android:id="@+id/reportes" />

    </LinearLayout>


</LinearLayout>
