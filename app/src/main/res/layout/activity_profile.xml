<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#21314B"
    tools:context="com.example.rogelio.saludtec.Profile">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="3"
        android:background="@mipmap/morning_mist"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="20dp">

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/profileName"
                android:text="Hugo Gonzalez"
                android:textColor="#fff"
                android:textSize="35dp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profileEmail"
                android:text="hugo@gmail.com"
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_below="@+id/profileName"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masculino"
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_marginBottom="0dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/profileEmail"
                android:id="@+id/userGenderTV" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.7 Metros"
                android:textColor="#fff"
                android:textSize="20dp"
                android:id="@+id/profileHeight"
                android:layout_alignTop="@+id/userGenderTV"
                android:layout_alignEnd="@+id/profileName" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/userProfile"/>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1.5"
        android:background="#FFFFFF"
        >

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="3">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profileWeightTV"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="5dp"
                    android:text="23"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kg Perdidos"
                    android:textSize="20dp"
                    android:id="@+id/profileWeightLabelTV"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/profileWeightTV" />


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:background="#DEE5E7">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/editProfileBT"
                    android:background="@mipmap/gear"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>







</LinearLayout>
